<div class="movap-titulo">
  <h4 align="left">ACOMPANHAMENTO ONLINE</h4>
  <hr>
</div>


<div class="col">
    <div class="row">
        <div class="col-5">
            <div class="bg clearfix col">
                
                <button type="button" class="btn btn-primary btn-info dropdown-toggle btn-secondary float-right " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    POR NOME
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">POR DATA</a>
                    <a class="dropdown-item" href="#">POR MEC</a>
                    <a class="dropdown-item" href="#">POR ...</a>
                    <div class="dropdown-divider"></div>
                </div>
            </div>
            <br>
            <div class="col">
                <div class="input-group">
                    <input class="form-control" type="search" placeholder="Pesquisar" aria-label="Search" style="border-right: none;">
                    <div class="input-group-append">
                        <div class="input-group-text" style="background-color: #FFF"><i class="fas fa-search"></i></div>
                    </div>
                </div>
            </div>

                
                <div class="row"> 
                    <table class="table table-bordered table-responsive-sm mt-4">
                    <tbody id="myTable">
                        {{#each stations}}
                        <tr>
                        <th scope="row" class="font-book text-center col-4" onclick="location.href='/station/list/{{id}}'">{{nameEmployed}}</th>
                        <th scope="row" class="font-book text-center col-4" onclick="location.href='/station/list/{{id}}'">{{toleranceTime}}</th> 
                        <th scope="row" class="font-book text-center col-4" onclick="location.href='/station/list/{{id}}'">{{status}}</th>
                        <th width="30" scope="row" class="font-book text-center col-4" onclick="location.href='/station/list/{{id}}'">. . .</th>
                        </tr>
                        {{/each}}
                    </tbody>
                    </table>
                </div>   
            
         </div>
   </div>
</div>