<div class="movap-titulo">
  <h4 align="left">CADASTRO DE ESTAÇÕES DE APARELHOS</h4>
  <hr>
</div>
<div class="col">
    <div class="row">
        <div class="col-lg-8">
            <form action="/station/signup" method="post">
            <div class="form-group col-lg-8">
                <p class="movap-nomes" align="left">Código da Estação</p>
                <input type="text" class="form-control" id="intentificação" placeholder="" name="station[codeStation]">
            </div>
            <div class="form-group col-lg-8">
                <p class="movap-nomes" align="left">Número do Aparelho</p>
                <input type="number" class="form-control" id="intentificação" placeholder="" name="station[deviceNumber]">
            </div>
            <div class="form-group col-lg-8">
                <p class="movap-nomes" align="left">Nome do Colaborador</p>
                <input type="text" class="form-control" id="intentificação" placeholder="" name="station[nameEmployed]">
            </div>
            <div class="form-group col-lg-8">
                <p class="movap-nomes" align="left">Tempo de tolerância para uso do aparelho</p>
                <input type="time" class="form-control" id="intentificação" placeholder="" name="station[toleranceTime]">
            </div>
            <div class="form-group col-lg-8">
                <p class="movap-nomes" align="left">Status</p>
                <select class="form-control" id="exampleFormControlSelect1" name="station[status]">
                  <option>Trabalho</option>
                  <option>Férias</option>
                  <option>Atestado</option>
                  <option>Falta</option>
                </select>
            </div>
            <div class="form-group col-lg-8">
                <p class="movap-nomes" align="left">Horário de entrada</p>
                <input type="time" class="form-control" id="intentificação" placeholder="" name="station[inputHour]">
            </div>
            <div class="form-group col-lg-8">
                <p class="movap-nomes" align="left">Horário de saída</p>
                <input type="time" class="form-control" id="intentificação" placeholder="" name="station[outputHour]">
            </div>
            <div class="form-group col-lg-8">
                <p class="movap-nomes pb-2" align="left">Dias da Semana</p>

                <input type="checkbox" name='station[weekday][monday]' value="1">Segunda</input>
                <input type="checkbox" name='station[weekday][tuesday]' value="1">Terça</input>
                <input type="checkbox" name='station[weekday][wednesday]' value="1">Quarta</input>
                <input type="checkbox" name='station[weekday][thursday]' value="1">Quinta</input>
                <input type="checkbox" name='station[weekday][frinday]' value="1">Sexta</input>
                <input type="checkbox" name='station[weekday][saturday]' value="1">Sábado</input>
                <input type="checkbox" name='station[weekday][sunday]' value="1">Domingo</input>

            </div>

            <div class="form-group justify-content-start col-md-8 d-flex movap">
                <input type="submit" value="CONFIRMAR" class="btn btn-primary" >
            </div>
            </form>
        </div>
    </div>
</div>
<br><br><br>
