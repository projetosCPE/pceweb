<div class="box-clientsRegistration">
  <div class="movap-titulo">
    <h4 align="left">EDIÇÃO DE CLIENTES</h4>
    <hr>
  </div>

  <form action="/client/{{client.id}}" class="col-lg-10" method="post">
    <div class="form-group col-lg-8">
      <p class="movap-nomes" align="left">Código do Cliente</p>
      <input type="text" class="form-control" id="intentificação" name="client[codClient]" value="{{client.codClient}}">
    </div>
    <div class="form-group col-lg-8">
      <p class="movap-nomes" align="left">Razão Social</p>
      <input type="text" class="form-control" id="intentificação" name="client[corporateName]" value="{{client.corporateName}}">
    </div>
    <div class="form-group col-lg-8">
      <p class="movap-nomes" align="left">Nome Fantasia</p>
      <input type="text" class="form-control" id="intentificação" name="client[fantasyname]" value="{{client.fantasyname}}">
    </div>
    <div class="form-group col-lg-8">
      <p class="movap-nomes" align="left">CNPJ</p>
      <input type="number" class="form-control" id="intentificação" name="client[cnpj]" value="{{client.cnpj}}">
    </div>

  <div class="form-row pl-3">
      <div class="form-group col-lg-6 col-9">
        <p class="movap-nomes" align="left" for="inputAddress">Endereço</p>
        <input type="text" class="form-control" id="inputAddress" placeholder="" name="client[address][street]" value="{{client.address.street}}">
      </div>
      <div class="form-group col-lg-2 col-3 pr-4">
        <p class="movap-nomes" align="left">Número</p>
        <input type="number" class="form-control" name="client[address][number]" value="{{client.address.number}}">
      </div>
    </div>
    <div class="form-row pl-3">
      <div class="form-group col-lg-4 col-6 pr-2">
        <p class="movap-nomes" align="left">Cidade</p>
        <input type="text" class="form-control" id="inputCity" name="client[address][city]" value="{{client.address.city}}">
      </div>
      <div class="form-group col-lg-2 col-3 pr-2 pl-2">
        <p class="movap-nomes" align="left">Estado</p>
        <select id="inputEstado" class="form-control" value="{{client.address.state}}">
          <option selected>Escolher...</option>
          <option>AC</option>
          <option>AL</option>
          <option>AP</option>
          <option>AM</option>
          <option>BA</option>
          <option>CE</option>
          <option>DF</option>
          <option>ES</option>
          <option>GO</option>
          <option>MA</option>
          <option>MT</option>
          <option>MS</option>
          <option>MG</option>
          <option>PA</option>
          <option>PB</option>
          <option>PR</option>
          <option>PE</option>
          <option>PI</option>
          <option>RJ</option>
          <option>RN</option>
          <option>RS</option>
          <option>RO</option>
          <option>RR</option>
          <option>SC</option>
          <option>SP</option>
          <option>SE</option>
          <option>TO</option>
        </select>
      </div>
      <div class="form-group col-lg-2 col-3 pr-4">
        <p class="movap-nomes" align="left">CEP</p>
        <input type="number" class="form-control" id="inputCEP" name="client[address][cep]" value="{{client.address.cep}}">
      </div>
    </div>
    <div class="form-group col-lg-8">
      <p class="movap-nomes" align="left">E-mail</p>
      <input type="email" class="form-control" id="intentificação" name="client[email]" value="{{client.email}}" readonly>
    </div>
    <div class="form-group col-lg-8">
      <p class="movap-nomes" align="left">Telefone</p>
      <input type="tel" class="form-control" id="intentificação" name="client[phone]" value="{{client.phone}}">
    </div>
    <div class="form-group col-lg-8">
      <p class="movap-nomes" align="left">Nome para contato</p>
      <input type="text" class="form-control" id="intentificação" name="client[nameContact]" value="{{client.nameContact}}">
    </div>
    <div class="form-group col-lg-8">
      <p class="movap-nomes" align="left">Status</p>
      <select class="form-control" id="exampleFormControlSelect1" name="client[status]" value="{{client.status}}">
        <option>Ativo</option>
        <option>Outros</option>
      </select>
    </div>
    <div class="form-group justify-content-start col-md-8 d-flex movap">
      <input type="submit" value="CONFIRMAR" class="btn btn-primary" >
    </div>
  </form>
  <br><br><br><br>
</div>
